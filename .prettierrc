{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "overrides": [
    {
      "files": ".prettierrc",
      "options": { "parser": "json", "semi": true, "singleQuote": true }
    },
    { "files": "*.test.js", "options": { "semi": true } },
    { "files": ["*.html", "legacy/**/*.js"], "options": { "tabWidth": 4 } }
  ],
  "singleQuote": true,
  "endOfLine": "lf",
  "printWidth": 100,
  "bracketSpacing": true,
  "arrowParens": "always"
}
